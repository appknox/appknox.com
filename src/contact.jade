    section.contact-photo
      .background-image-holder
        img.background-image(alt='Background Image', src='/assets/img/hero4.jpg')
      .container
        .row
          .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.text-center
            h1.text-white
              | Contact Us
              br
              |           We'd love to hear from you
        .photo-form-wrapper.clearfix
          form.vemail-form
            .row
              .col-md-3.col-sm-4.col-sm-offset-2.col-md-offset-3
                input.form-name.validate-required(type='text', placeholder='Your Name', name='name')
              .col-md-3.col-sm-4
                input.form-email.validate-required.validate-email(type='text', placeholder='Your Email', name='email')
            .row
              .col-md-6.col-sm-8.col-sm-offset-2.col-md-offset-3.text-center
                input.form-message.validate-required(type='text', name='text', placeholder='Your Message')
                input.send-form.btn-filled(type='submit', value='Contact Us')
                h1.form-done.text-white(style='display:none') We will get back to you as soon as possible !
                .form-success
                  span.text-white Message sent - Thanks for your enquiry
                .form-error
                  span.text-white Please complete all fields correctly
